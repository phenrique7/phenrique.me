---
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import BaseHead from "@/components/BaseHead.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "@/consts";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <style>
      .container {
        width: 100%;
        max-width: 64rem;
        margin-left: auto;
        margin-right: auto;
        padding-left: 1rem;
        padding-right: 1rem;
      }

      .hero {
        flex: 1;
        padding-top: 8rem;
      }

      .title {
        font-size: 3.5rem;
        line-height: 1;
      }

      .subtitle {
        margin-top: 1rem;
        color: rgb(71 85 105);
      }

      .media-social {
        display: flex;
        gap: 1rem;
      }
    </style>
  </head>
  <body>
    <Header title={SITE_TITLE} />
    <main>
      <div class="container hero">
				<h1 class="title">Paulo Henrique</h1>
				<h4 class="subtitle">Christian & Front end Engineer</h4>
			</div>
    </main>
    <Footer />
  </body>
</html>
